@if (SelectedItem != null && SelectedItem._id > 0)
{
    @if (SelectedItem.films.Count > 0)
    {
        <span>@SelectedItem.name played in the following <b>films</b> @(WinCategory ? "👑" : "")</span>
        <table>
            @foreach (var item in SelectedItem.films)
            {
                <tr>
                    <td>@(SelectedItem.films.IndexOf(item) + 1)) @item</td>
                </tr>
            }
        </table>
    }
    else
    {
        <span>Oh no! It seems this character did not play in any films 🥺</span>
    }
}

@code {
    [Parameter]
    public Characters SelectedItem { get; set; }
    [Parameter]
    public bool WinCategory { get; set; } = false;
}
